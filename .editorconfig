root = true

[*]
charset = utf-8
end_of_line = lf
# editorconfig-tools is unable to ignore longs strings or urls
max_line_length = off

[*.md]
trim_trailing_whitespace = false
indent_size = unset

[{*.js,*.jsx,*.mjs,*.cjs,*.ts,*.tsx,*.json}]
indent_style = space
indent_size = 2
tab_width = 2
trim_trailing_whitespace = true
insert_final_newline = true
